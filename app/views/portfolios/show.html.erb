<h1><%= @portfolio_item.title %></h1>
<p><%= @portfolio_item.subtitle %></p>
<p><%= @portfolio_item.body %></p>
<p><%= image_tag @portfolio_item.thumb_image if @portfolio_item.thumb_image %></p>
<p><%= link_to "Edit", edit_portfolio_path(@portfolio_item) %></p>
<p><%= button_to "Destroy this Portfolio Item", portfolio_path(@portfolio_item), method: :delete, data: { confirm: 'Are you sure?'} %></p>
